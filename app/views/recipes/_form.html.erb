<%= form_with(model: @ingredient) do |form| %>
  <div class="field form-group">
    <% form.label :ingredients %>
    <%= form.text_field :ingredient, class:"form-control", placeholder:"Ingredient" %>
  </div>

  <%= link_to 'Add ingredient', new_ingredient_path, class: "btn btn-secondary" %>

<% end %>

<%= form_with(model: recipe) do |form| %>
