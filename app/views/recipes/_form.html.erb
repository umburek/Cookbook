      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :preparation %>
    <%= form.text_field :preparation, class:"form-control", placeholder:"Preparation" %>
  </div>

  <div class="field form-group">
    <% form.label :preparation_time %>
    <%= form.number_field :preparation_time, class:"form-control", placeholder:"Preparation time" %>
  </div>

  <div class="field form-group">
    <% form.label :multiplier %>
    <%= form.text_field :multiplier, class:"form-control", placeholder:"Multiplier" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Recipe", class: 'btn btn-secondary' %>
  </div>

<% end %>
