<h1>Recipes</h1>

<table class="table  table-stripes table-bordered table-hover">
  <thead>
  <tr>
    <th>Ingredients</th>
    <th>Quantity</th>
    <th>Unit</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.ingredients_name %></td>
      <%# @ingredients_recipe.each do |ingredient_recipe| %>
<!--        <td><%#= ingredient_recipe.quantity %></td>-->
      <td><%= ingredient.ingredients_unit %></td>
    </tr>
  <% end %>
  </tbody>

  <thead>
  <tr>
    <th>Preparation</th>
    <th>Preparation Time</th>
  </tr>
  </thead>

  <tbody>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.preparation %></td>
      <td><%= recipe.preparation_time %> minutes</td>
      <td><%= link_to 'Show', recipe, class:"btn btn-secondary" %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe), class:"btn btn-secondary" %></td>
      <td><%= link_to 'Destroy', recipe, class:"btn btn-secondary", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path, class:"btn btn-secondary" %>